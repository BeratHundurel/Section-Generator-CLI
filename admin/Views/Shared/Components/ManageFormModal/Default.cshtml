@model ManageFormModalViewModel
@inject IUnitOfWork _uow
@{ 
    var formAction = Model.FormAction == null ? Model.ViewName + "/manage" : Model.FormAction;
    //Buradaki Model.UniqueId değerini form güncellemesini tetikleyen butona eklememiz gerekmekte.
}

<!-- Modal -->
<div class="modal fade manage_form__modal manage_form__modal_@Model.ModalUniqueId" tabindex="-1" role="dialog" aria-labelledby="manageFormModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog @Model.ModalDialogClass modal-dialog-centered" role="document">
        <div class="modal-content">
            <form action="@formAction" class="needs-validation" novalidate method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">@Model.Title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    @await Component.InvokeAsync("ManageForms", Model)
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                    <button type="submit" class="btn btn-primary ">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>