@model SectionViewModel
@inject IUnitOfWork _uow
@{
    Language language;
    if (_uow.Cookie.GetUserLanguageId != 0)
    {
        language = _uow.Language.GetById(_uow.Cookie.GetUserLanguageId);
    }
    else
    {
        language = _uow.Language.GetIsRootLang();
    }
}
<input type="hidden" name="sectionName" value="_BreadcrumpSection" />
<input type="hidden" name="order" value="@Model.order" />
<input type="hidden" name="langId" value="@language.Id" />


<div class="form-group">
    <label>Başlık</label>
    <input type="text" class="form-control" name="title" value="@Model.title" onkeypress="changeTitle(this);" onblur="changeTitle(this);" />
</div>
<br />
<div class="form-group">
    <label>Sayfa İsmi</label>
    <textarea type="text" class="form-control" name="paramText2" rows="4">@Model.paramText2</textarea>
</div>
<br />
<div class="form-group">
    <label>Sayfa linki</label>
    <textarea type="text" class="form-control" name="paramText3" rows="4">@Model.paramText3</textarea>
</div>
<div class="form-group">
    <label>Sayfa Başlığı</label>
    <textarea type="text" class="form-control" name="paramText4" rows="4">@Model.paramText4</textarea>
</div>