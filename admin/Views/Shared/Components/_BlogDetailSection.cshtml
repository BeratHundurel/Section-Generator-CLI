@model SectionViewModel

<div class="portlet portlet-sortable  box green" data-order="0">
    <input type="hidden" name="sectionName" value="_BlogDetailSection" />
    <input type="hidden" name="order" value="@Model.order" />
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-bars"></i><span class="portlet-title-span">@Model.title</span>
        </div>
        <div class="tools">
            <a href="javascript:;" class="collapse" data-original-title="" title=""> </a>
            <a href="javascript:;" class="remove" data-original-title="" title=""> </a>
        </div>
    </div>
    <div class="portlet-body tabs-below" style="display: none;">
        <p>Blog iç sayfasıdır.</p>
    </div>
</div>
