<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>@ViewData["Title"] - Yönetim Paneli</title>
    @*For Blazor Components*@
    <base href='@Url.Content("~/")'>
    <!--favicon-->
    <link rel="icon" href="~/theme/assets/images/favicon-32x32.png" type="image/png" />
    <!-- loader-->
    <link href="~/theme/assets/css/pace.min.css" rel="stylesheet" />
    <script src="~/theme/assets/js/pace.min.js"></script>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/theme/assets/css/bootstrap.min.css" />
    <!-- Icons CSS -->
    <link rel="stylesheet" href="~/theme/assets/css/icons.css" />
    <!-- App CSS -->
    <link rel="stylesheet" href="~/theme/assets/css/app.css" />
    <!--Site Css-->
    <link rel="stylesheet" href="~/css/site.css" />
    @await RenderSectionAsync("style", required: false)
</head>

<body>
    <!-- wrapper -->
    <div class="wrapper">
        <div class="section-authentication-login d-flex align-items-center justify-content-center">
            <div class="row">
                @RenderBody()
            </div>
        </div>
    </div>
    <!-- end wrapper -->
    @await RenderSectionAsync("script", required: false)
</body>
</html>
